package CS5003;
/**
 *
 *  @author Daniel O'Sullivan, Awad Saad, Hardik Pandit
 */
import java.time.LocalDate;
import java.io.Serializable;

public class Activity implements Serializable {
    
    // Serial version ID
    
    private static final long serialVersionUID = 1L;
    
    // Fields
    
    public static int nextActivityId = 1;
    
    private int activityId;
    
    private String activityName;
    
    private LocalDate activityDate;
    
    private int activityQuantity;
    
    // Constructor
    
    public Activity(String activityName, int activityQuantity)
    {
        
        // Exception Handling
        
        if (activityQuantity < 0)
        {
            throw new IllegalArgumentException("Activity quantity cannot be negative");
        }
        
        if (!activityName.equals("AddToStock") && !activityName.equals("RemoveFromStock"))
        {
            throw new IllegalArgumentException("Activity name must be AddToStock or RemoveFromStock");
        }
        
        // Fields for Constructor
        
        activityId = nextActivityId;
        
        nextActivityId++;
        
        this.activityName = activityName;
        
        activityDate = LocalDate.now();
        
        this.activityQuantity = activityQuantity;
       
    }
    
    // Methods
    
    // Getters
    
    public int getActivityId()
    {
        return activityId;
    }
    
    public String getActivityName()
    {
                return activityName;
    }
    
    public LocalDate getActivityDate()
    {
        return activityDate;
    }
    
    public int getActivityQuantity()
    {
        return activityQuantity;
    }
}
